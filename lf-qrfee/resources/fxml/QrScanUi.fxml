<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="115.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="top.lf.control.QrScanControl">
   <children>
      <Label layoutX="14.0" layoutY="40.0" text="支付码：">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="qrCodeTxt" layoutX="70.0" layoutY="37.0">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <Button fx:id="btnSubmitPay" layoutX="252.0" layoutY="36.0" mnemonicParsing="false" onMouseClicked="#btnSubmitPay_OnClicked" text="发起支付">
         <font>
            <Font size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
       <Label fx:id="msgLabel" alignment="CENTER" layoutX="40.0" layoutY="80.0" prefHeight="20.0" prefWidth="270.0" textAlignment="CENTER">
           <font>
               <Font name="System Bold" size="14.0" />
           </font>
       </Label>
      <Label fx:id="payMsg" visible="false" />
   </children>
</AnchorPane>
